<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<class name="com.firrael.spring.xml.Rss">

		<map-to xml="rss" />

		<field name="channel" type="com.firrael.spring.xml.Channel">
			<bind-xml name="channel" />
		</field>

	</class>

	<class name="com.firrael.spring.xml.Channel">
	
		<field name="title" type="string">
			<bind-xml name="title" node="attribute" />
		</field>
		
		<field name="link" type="string">
			<bind-xml name="link" node="attribute" />
		</field>
		
		<field name="description" type="string">
			<bind-xml name="description" node="attribute" />
		</field>
		
		<field name="language" type="string">
			<bind-xml name="language" node="attribute" />
		</field>
		
		<field name="managingEditor" type="string">
			<bind-xml name="managingEditor" node="attribute" />
		</field>
		
		<field name="generator" type="string">
			<bind-xml name="generator" node="attribute" />
		</field>
		
		<field name="pubDate" type="string">
			<bind-xml name="pubDate" node="attribute" />
		</field>
		
		<field name="lastBuildDate" type="string">
			<bind-xml name="lastBuildDate" node="attribute" />
		</field>
		
		<field name="image" type="com.firrael.spring.xml.Image">
			<bind-xml name="image" node="attribute" />
		</field>

		<field name="item" type="com.firrael.spring.xml.Article" collection="arraylist">
			<bind-xml name="item" />
		</field>
		
		

	</class>
	
	<class name="com.firrael.spring.xml.Image">
	
		<field name="link" type="string">
			<bind-xml name="link" node="attribute" />
		</field>
		
		<field name="url" type="string">
			<bind-xml name="url" node="attribute" />
		</field>
		
		<field name="title" type="string">
			<bind-xml name="title" node="attribute" />
		</field>
	</class>

	<class name="com.firrael.spring.xml.Article">

		<field name="title" type="string">
			<bind-xml name="title" node="attribute" />
		</field>

		<field name="guid" type="string">
			<bind-xml name="guid" node="attribute" />
		</field>

		<field name="link" type="string">
			<bind-xml name="link" node="attribute" />
		</field>

		<field name="description" type="string">
			<bind-xml name="description" node="attribute" />
		</field>

		<field name="pubDate" type="string">
			<bind-xml name="pubDate" node="attribute" />
		</field>

		<field name="author" type="string">
			<bind-xml name="author" node="attribute" />
		</field>

		<field name="category" type="string" collection="arraylist">
			<bind-xml name="category" />
		</field>



	</class>

</mapping>